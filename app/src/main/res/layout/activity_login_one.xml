<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginOneActivity"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/flixdin_text"
        android:layout_width="216dp"
        android:layout_height="92dp"

        android:layout_marginStart="96dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="99dp"
        android:transitionName="starting_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flixdin" />

    <EditText
        android:id="@+id/email"
        android:layout_width="359dp"
        android:layout_height="60.14dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="26dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/box"
        android:ems="10"
        android:fontFamily="@font/inter_medium"

        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="#C6B34E"
        android:textColorHint="@color/gold"
        android:transitionName="starting_screen2"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flixdin_text" />

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/editTextTextPersonName2"
        android:layout_width="359dp"
        app:boxBackgroundMode="none"
        android:layout_height="64.14dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="26dp"




        android:fontFamily="@font/inter_medium"

        app:hintTextAppearance="@style/GreenTextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#978839">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/box"
            android:inputType="textPassword"

            android:padding="4dp"


            android:text="Password"
            android:textColor="@color/gold"

            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="266dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/inter_medium"
        android:text="Forgot Password"
        android:textColor="#C6B34E"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/login_button"
        android:layout_width="359dp"
        android:layout_height="60.19dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/box"
        android:backgroundTint="@color/gold"
        android:fontFamily="@font/inter_semibold"
        android:text="Login"
        android:textColor="#5B4E07"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_pass"
        app:strokeColor="@color/gold" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/signup_button"

        android:layout_width="359dp"
        android:layout_height="60.19dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="2dp"

        android:layout_marginEnd="26dp"

        android:layout_marginBottom="150dp"
        android:background="@drawable/box"


        android:fontFamily="@font/inter_semibold"

        android:text="Sign Up"
        android:textColor="#5B4E07"


        android:textSize="24dp"
        android:textStyle="bold"
        android:transitionName="starting_screen2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:strokeColor="#A4A4A4" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/or"
        app:layout_constraintBottom_toTopOf="@+id/signup_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />


</androidx.constraintlayout.widget.ConstraintLayout>