<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment"
    android:background="#FFFADD">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/all_explore"
        android:layout_width="70dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="All"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:padding="0dp"
        android:textColor="@color/black"
        android:backgroundTint="#E7DA95"
        android:layout_marginLeft="15dp"
        android:background="@drawable/box4"
        android:layout_marginTop="33dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nearme_explore"
        android:layout_width="70dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/all_explore"
        android:text="NearMe"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:padding="0dp"
        android:textColor="@color/black"
        android:backgroundTint="#CBC8BA"
        android:layout_marginLeft="15dp"
        android:background="@drawable/box4"
        android:layout_marginTop="33dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/location_explore"
        android:layout_width="75dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/nearme_explore"
        android:text="Location"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:padding="3dp"
        android:textColor="@color/black"
        android:background="@drawable/box4"
        android:backgroundTint="#CBC8BA"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="15dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/domain_explore"
        android:layout_width="70dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/location_explore"
        android:text="Domain"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:padding="0dp"
        android:textColor="@color/black"
        android:backgroundTint="#CBC8BA"
        android:layout_marginLeft="15dp"
        android:background="@drawable/box4"
        android:layout_marginTop="33dp"/>
    <ImageButton
        android:id="@+id/radius_explore"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/domain_explore"
        android:src="@drawable/location"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="33dp"
        android:padding="15dp"
        android:background="@drawable/box4"
        android:backgroundTint="#CBC8BA"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchbarexplore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/all_explore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:endIconScaleType="centerInside"
            app:endIconCheckable="true"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/search_icon"
            app:endIconTint="#BEAD56"
            app:boxBackgroundMode="none"
            android:textColorHint="#BEAD56">
            <EditText
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:hint="Search"
                android:background="@drawable/box4"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchbarexplore"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
    <GridLayout
        android:id="@+id/pictures_grid_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="0dp"
        android:background="@drawable/box5">

        <ImageView
            android:src="@drawable/flixin"
            android:layout_height="120dp"
            android:layout_width="136dp"
            android:padding="0dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />
        <ImageView
            android:src="@drawable/artboard"
            android:layout_height="120dp"
            android:layout_width="136dp"
            />

    </GridLayout>

    </ScrollView>







</androidx.constraintlayout.widget.ConstraintLayout>



